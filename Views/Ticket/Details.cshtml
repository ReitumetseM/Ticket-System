@model OmnitakSupportHub.Models.Ticket

<h2>Ticket Details</h2>

<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>

    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.Category?.CategoryName</dd>

    <dt class="col-sm-2">Priority</dt>
    <dd class="col-sm-10">@Model.Priority?.PriorityName</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status?.StatusName</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.TicketID" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back</a>