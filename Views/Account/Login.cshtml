@model OmnitakSupportHub.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Omnitak Support Hub";
}

<style>

    .body {
        font-family: Arial, sans-serif;
        margin: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #f0f2f5 0%, #e0e4e8 100%);
        overflow: hidden;
    }

    .landing-container {
        display: flex;
        width: 80%;
        max-width: 900px;
        height: 500px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        animation: fadeIn 1s ease-in;
    }

    .left-section {
        flex: 1;
        background: linear-gradient(135deg, #2e7d32 0%, #388e3c 100%);
        color: white;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        transition: transform 0.3s ease, background 0.5s ease;
    }

        .left-section:hover {
            transform: scale(1.02);
            background: linear-gradient(135deg, #1b5e20 0%, #2e7d32 100%);
        }

        .left-section h1 {
            font-size: 3.0rem;
            margin: 0 0 1rem;
            animation: slideIn 1s ease-out;
        }

        .left-section p {
            font-size: 1.1rem;
            line-height: 1.6;
            opacity: 0;
            animation: fadeInUp 1.5s ease-out forwards;
            animation-delay: 0.5s;
        }

    .right-section {
        flex: 1;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background: rgba(255, 255, 255, 0.95);
        position: relative;
        overflow: hidden;
    }

    .logo {
        width: 60px;
        height: 60px;
        background-color: #2e7d32;
        border-radius: 50%;
        margin-bottom: 1.5rem;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 1.5rem;
        color: white;
    }

    h2 {
        color: #333;
        font-size: 1.3rem;
        margin-bottom: 1.5rem;
        text-align: center;
        animation: fadeIn 1s ease-out;
    }

    .form-group {
        width: 100%;
        margin-bottom: 1rem;
    }

    input {
        transition: border-color 0.3s ease, transform 0.2s ease;
    }

        input:focus {
            border-color: #2e7d32;
            outline: none;
            transform: scale(1.02);
        }

    button {
        transition: transform 0.3s ease, background 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        button:hover {
            transform: translateY(-2px);
            background: linear-gradient(90deg, #1b5e20 0%, #2e7d32 100%);
        }

        button::after {
            content: '';
            position: absolute;
            width: 0;
            height: 100%;
            background: rgba(255, 255, 255, 0.2);
            top: 0;
            left: 0;
            transition: width 0.3s ease;
        }

        button:hover::after {
            width: 100%;
        }

</style>
<div class="body">
    <div class="landing-container">
        <div class="left-section">
            <h1>Welcome<br>to<br>Omnitak<br>Support<br>Hub</h1>
            Streamline your IT support with our advanced system designed to keep your business running smoothly. Log in to access powerful tools and resources.
        </div>
        <div class="right-section">
            <div class="logo">O</div>
            <h2>IT Support System</h2>
            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger small mb-3"></div>
                <div class="mb-3">
                    <input asp-for="Email" class="form-control" placeholder="Enter your company email" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <input asp-for="Password" class="form-control" placeholder="Enter your password" type="password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label small">Remember me</label>
                    </div>
                    <a asp-action="ForgotPassword" class="small">Forgot Password?</a>
                </div>
                <button type="submit" class="btn btn-success w-100 fw-semibold">Sign In</button>
                <div class="text-center mt-3 small">
                    Don’t have an account? <a asp-action="Register">Create one here</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}