@{
    ViewData["Title"] = "Password Reset Sent";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <div class="alert alert-success">
            <i class="bi bi-check-circle-fill fs-1"></i>
            <h2 class="mt-3">Password Reset Email Sent</h2>
        </div>
        <p>If your email exists in our system, you'll receive a password reset link shortly.</p>
        <p>Please check your inbox and follow the instructions to reset your password.</p>
        <div class="mt-4">
            <a asp-action="Login" asp-controller="Account" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left"></i> Return to Login
            </a>
        </div>
    </div>
</div>