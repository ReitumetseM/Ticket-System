@{
    ViewData["Title"] = "Password Reset Error";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill fs-1"></i>
            <h2 class="mt-3">Invalid Reset Link</h2>
        </div>
        <p>The password reset link is invalid or has expired.</p>
        <p>Please request a new password reset link.</p>
        <div class="mt-4">
            <a asp-action="ForgotPassword" asp-controller="Account" class="btn btn-primary me-2">
                <i class="bi bi-key"></i> Request New Link
            </a>
            <a asp-action="Login" asp-controller="Account" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Return to Login
            </a>
        </div>
    </div>
</div>